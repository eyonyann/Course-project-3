        <button class="default-button" type="button" onclick="updateProfile()">–°–æ—Ö—Ä–∞–Ω–∏—Ç—å</button>
        <button class="text-button" type="button" onclick="logOut()">–í—ã–π—Ç–∏</button>
        <% if (session.user && session.user.id !== 1) { %>
            <div class="edit-buttons">
