<script>
    // –û–ø—Ä–µ–¥–µ–ª—è–µ–º –≥—Ä—É—Å—Ç–Ω—ã–π —Å–º–∞–π–ª–∏–∫
    const sadSmiley = 'üòû';

    // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –æ–±—Ä–∞–±–æ—Ç–∫–∏ —Å–æ–±—ã—Ç–∏—è –∏–∑–º–µ–Ω–µ–Ω–∏—è –≤–∏–¥–∏–º–æ—Å—Ç–∏ –≤–∫–ª–∞–¥–∫–∏
    function handleVisibilityChange() {
        if (document.hidden) {
            document.title = sadSmiley + ' Movie Reviews'; // –ò–∑–º–µ–Ω—è–µ–º –∑–∞–≥–æ–ª–æ–≤–æ–∫ –≤–∫–ª–∞–¥–∫–∏ –Ω–∞ –≥—Ä—É—Å—Ç–Ω—ã–π —Å–º–∞–π–ª–∏–∫
        } else {
            document.title = 'üòä Movie Reviews'; // –í–æ–∑–≤—Ä–∞—â–∞–µ–º –∏—Å—Ö–æ–¥–Ω—ã–π –∑–∞–≥–æ–ª–æ–≤–æ–∫ –≤–∫–ª–∞–¥–∫–∏
        }
    }

    document.addEventListener('DOMContentLoaded', function () {
        // Get a reference to the sort-select dropdown
        const sortSelect = document.getElementById('sort-select');

        // Get the selected sorting option from localStorage, if available
        const savedSortOption = localStorage.getItem('sortOption');
        if (savedSortOption) {
            sortSelect.value = savedSortOption;
        }

        // Add an event listener to the sort-select dropdown
        sortSelect.addEventListener('change', () => {
            // Get the selected sorting option value
            const selectedOption = sortSelect.value;

            // Save the selected option to localStorage
            localStorage.setItem('sortOption', selectedOption);
            const currentPath = window.location.pathname;
            const newUrl = `${currentPath}?sort=${selectedOption}`;

            // Reload the page with the selected sorting option as a query parameter
            window.location.href = newUrl;
        });
    });

    // –î–æ–±–∞–≤–ª—è–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫ —Å–æ–±—ã—Ç–∏—è –∏–∑–º–µ–Ω–µ–Ω–∏—è –≤–∏–¥–∏–º–æ—Å—Ç–∏ –≤–∫–ª–∞–¥–∫–∏
    document.addEventListener('visibilitychange', handleVisibilityChange);

    // –ü–æ–ª—É—á–∞–µ–º —Å—Å—ã–ª–∫–∏ –Ω–∞ –≤—Å–µ –∫–Ω–æ–ø–∫–∏ –º–µ–Ω—é
    const mainButton = document.getElementById('main');
    const myButton = document.getElementById('favorites');
    const searchButton = document.getElementById('search');
    const profileButton = document.getElementById('profile');
    const gitButton = document.getElementById('github');
    const signInButton = document.getElementById('signIn');

    // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π –¥–ª—è –∫–Ω–æ–ø–æ–∫
    mainButton.addEventListener('click', () => {
        window.location.href = '/'; // –ü–µ—Ä–µ–Ω–∞–ø—Ä–∞–≤–ª—è–µ–º –Ω–∞ –≥–ª–∞–≤–Ω—É—é —Å—Ç—Ä–∞–Ω–∏—Ü—É
    });

    myButton.addEventListener('click', () => {
        window.location.href = '/favorites'; // –ü–µ—Ä–µ–Ω–∞–ø—Ä–∞–≤–ª—è–µ–º –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü—É "–ú–æ—ë"
    });

    searchButton.addEventListener('click', () => {
        window.location.href = '/search'; // –ü–µ—Ä–µ–Ω–∞–ø—Ä–∞–≤–ª—è–µ–º –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü—É –ø–æ–∏—Å–∫–∞
    });

    profileButton.addEventListener('click', () => {
        window.location.href = '/profile'; // –ü–µ—Ä–µ–Ω–∞–ø—Ä–∞–≤–ª—è–µ–º –Ω–∞ —Å—Ç—Ä–∞–Ω–∏—Ü—É –≤—Ö–æ–¥–∞
    });

    gitButton.addEventListener('click', (event) => {
        event.preventDefault();
        window.open('https://github.com/eyonyann/Course-project-3', '_blank'); // –û—Ç–∫—Ä—ã–≤–∞–µ–º —Å—Å—ã–ª–∫—É –≤ –Ω–æ–≤–æ–π –≤–∫–ª–∞–¥–∫–µ
    });
</script>

